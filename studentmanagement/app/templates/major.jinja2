{% extends "layout.jinja2" %}
{% block title %}전공{% endblock %}
{% block head %}
{{ super() }}
{% endblock %}
{% block content %}
<h3>전공</h3>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  전공 생성
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
	aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">전공 생성</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">

				<form action = "{{ url_for('major') }}" method = "POST">
					<div class="form-group">
						<label for="recipient-name" class="col-form-label" for="full_name">전공 이름:</label>
						<input type="text" class="form-control" id="full_name" name="full_name" required>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						<button type="submit" class="btn btn-primary">Save changes</button>
					</div>
				</form>

			</div>


		</div>
	</div>
</div>

<ul class="list-group">
	{% for item in major%}
	<li class="list-group-item">
		<article class="uk-article">
      <a href="{{ url_for('getmajor', id=item.id) }}" class="list-group-item list-group-item-action">
        {{ item.full_name }}
        <button type="button" class="btn btn-primary" onclick="location.href='{{ url_for('delMajor', id=item.id) }}' ">
          삭제
        </button>
      </a>
		</article>
		<hr />
	</li>
	{% endfor %}
</ul>


<!-- 수정  -->


{% endblock %}